<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">

    <h2>Edit your Listing</h2>

    <form method="post" action="/listings/<%= listing._id %>?_method=PUT">

      <div class="mb-3">
        <label class="form-label">Title:</label>
        <input name="title" value="<%= listing.title %>" type="text" class="form-control">
      </div>

      <div class="mb-3">
        <label class="form-label">Description:</label>
        <textarea name="description" class="form-control"><%= listing.description %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Image URL:</label>
        <input name="image" value="<%= listing.image %>" type="text" class="form-control">
      </div>

      <div class="mb-3">
        <label class="form-label">Location:</label>
        <input name="location" value="<%= listing.location %>" class="form-control">
      </div>

      <div class="row">

      <div class="mb-3 col-md-8">
        <label class="form-label">Country:</label>
        <input name="country" value="<%= listing.country %>" class="form-control">
      </div>

      <div class="mb-3 col-md-4">
        <label class="form-label">Price:</label>
        <input name="price" type="number" value="<%= listing.price %>" class="form-control">
      </div>

      </div>

      <button class="btn btn-dark edit-btn mt-3">Edit</button>

    </form>

  </div>
</div>
