<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Listing details</h3>

    <div class="card col-6 offset-2 show-card">
  <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="Listing image">
  <div class="card-body">
    <p class="card-text">
      <b>  <%= listing.title %> </b><br/>
      <%= listing.title %><br/>
        <%= listing.description %> <br/>
        &#x20B9;<%= listing.price.toLocaleString("en-IN") %> /night <br/>
        <%= listing.location %> <br/>
        <%= listing.country %> <br/>
      
    </p>
  </div>
</div>

    <br>
<div class="d-flex gap-3 mt-0" style="max-width: 600px;">

  <!-- EDIT BUTTON -->
  <a href="/listings/<%= listing._id %>/edit"
     class="btn btn-dark btn-sm w-100 py-1 offset-2">
     Edit
  </a>

  <!-- DELETE BUTTON -->
  <form method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE">
    <button type="submit"
            class="btn btn-danger btn-sm w-100 py-1 offset-2">
      Delete
    </button>
  </form>

</div>

</div>
</div>


